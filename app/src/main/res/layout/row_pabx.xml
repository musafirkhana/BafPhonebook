<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/header_linear"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/list_shape"
        android:orientation="horizontal">

        <TextView android:id="@+id/txt_designation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:textSize="8sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_weight=".03"
            android:background="@color/black"
            android:layout_height="fill_parent"></View>

        <TextView android:id="@+id/txt_office_ext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="Office(ext)"
            android:textSize="8sp" />

        <View
            android:layout_width="0dp"
            android:layout_weight=".03"
            android:background="@color/black"
            android:layout_height="fill_parent"></View>

        <TextView android:id="@+id/txt_office_auto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="Office(auto)"
            android:textSize="8sp" />

        <View
            android:layout_width="0dp"
            android:layout_weight=".03"
            android:background="@color/black"
            android:layout_height="fill_parent"></View>

        <TextView android:id="@+id/txt_res_ext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="Res(ext)"
            android:textSize="8sp" />

        <View
            android:layout_width="0dp"
            android:layout_weight=".03"
            android:background="@color/black"
            android:layout_height="fill_parent"></View>

        <TextView android:id="@+id/txt_res_auto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="Res(auto)"
            android:textSize="8sp" />
    </LinearLayout>

</LinearLayout>