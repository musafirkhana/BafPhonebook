<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header_linear"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/list_shape"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/row_txt_designation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Designation"
                android:textColor="@color/accent_color"
                android:textSize="10sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txt_basename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Designation"
                android:textColor="@color/black"
                android:textSize="8sp"
                 />
            <TextView
                android:id="@+id/txt_sqnname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:gravity="center"
                android:text="Designation"
                android:textColor="@color/black"
                android:textSize="8sp"
                />


        </LinearLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".03"
            android:background="@color/black"></View>

        <TextView
            android:id="@+id/row_txt_office_ext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Office(ext)"
            android:textColor="@color/black"
            android:textSize="8sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".03"
            android:background="@color/black"></View>

        <TextView
            android:id="@+id/row_txt_office_auto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="center"
            android:text="Office(auto)"
            android:textColor="@color/black"
            android:textSize="8sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".03"
            android:background="@color/black"></View>

        <TextView
            android:id="@+id/row_txt_res_ext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Res(ext)"
            android:textColor="@color/black"
            android:textSize="8sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".03"
            android:background="@color/black"></View>

        <TextView
            android:id="@+id/row_txt_res_auto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Res(auto)"
            android:textColor="@color/black"
            android:textSize="8sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/row_call_linear"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/call_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/call" />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@+id/call_image"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/row_pabx_mobile_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2.5dp"
                android:clickable="true"
                android:text="+8801911764894"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/row_txt_appoinment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2.5dp"
                android:clickable="true"
                android:text="+OC"
                android:textColor="@color/black"
                android:textSize="14sp" />


        </LinearLayout>


    </RelativeLayout>

</LinearLayout>